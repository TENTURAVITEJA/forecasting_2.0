{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"]     // <-- important
  },
  "include": [
    "src",
    "vite.config.ts",
    "src/vite-env.d.ts",         // <-- make sure this is included
    "src/**/*.d.ts"
  ]
}
